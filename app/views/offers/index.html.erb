<div class="container">
  <div class="wrap">
    <div class="search">
        <input type="text" class="searchTerm" placeholder="What are you looking for?">
        <button type="submit" class="searchButton">
          <i class="fa fa-search"></i>
      </button>
    </div>
  </div>

  <div class="button-container sticky-button">
    <%= link_to "+ Add a place", new_offer_path, class: "button button_purple" %>
  </div>

  <div class="mt-5">
    <div class="row">
      <% @offers.each do |offer| %>
        <div class="col-md-4 mb-4">
          <%= link_to offer_path(offer), :class => "text-decoration-none" do %>
          <div class="card">
            <% if offer.photo_url.present? %>
              <%= image_tag(offer.photo_url, style: "height: 248px; width: 248px; object-fit: cover; border-radius: 10px; margin: auto") %>
            <% end %>

            <div class="text-left mx-3">
              <h5><b><%= offer.hotel_name %></b></h5>
              <p><%= offer.location %></p>
              <p><%= offer.description %></p>
              <h5><b><%= offer.price %>â‚¬ per/day</b></h5>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>


  <div class="button-container-center">
    <button class= "button button_more">More places</button>
  </div>
</div>
